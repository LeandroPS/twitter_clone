<style>
  body{
    background-color: rgba(0,0,0,0.05);
  }
</style>

<div class="registration">
  <div class="registration-box">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Senha" %>
        <% if @minimum_password_length %>
          <label>(<%= @minimum_password_length %> characters minimum)</label>
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repetir senha" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "button blue" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
